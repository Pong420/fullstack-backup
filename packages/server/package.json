{
  "name": "@fullstack/server",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "nest start --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@fullstack/common": "workspace:packages/common",
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.2.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.2.0",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/mongoose": "^7.0.1",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-fastify": "^7.2.0",
    "@nestjs/serve-static": "^2.1.3",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "cloudinary": "^1.22.0",
    "fastify": "2.15.1",
    "fastify-cookie": "^3.6.1",
    "fastify-helmet": "3.0.2",
    "fastify-multipart": "^1.0.6",
    "fastify-rate-limit": "^3.0.1",
    "fastify-static": "^2.7.0",
    "mongoose": "^5.9.19",
    "mongoose-autopopulate": "^0.12.2",
    "mongoose-paginate-v2": "^1.3.9",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pump": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@fullstack/typings": "workspace:packages/typings",
    "@nestjs/cli": "^7.4.0",
    "@nestjs/schematics": "^7.0.1",
    "@nestjs/testing": "^7.2.0",
    "@types/bcrypt": "^3.0.0",
    "@types/hapi__joi": "^17",
    "@types/jest": "26.0.0",
    "@types/mongoose": "^5.7.27",
    "@types/mongoose-autopopulate": "^0",
    "@types/mongoose-paginate-v2": "^1",
    "@types/passport": "^0",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.9",
    "@types/uuid": "^8",
    "jest": "^26.1.0",
    "jest-environment-node": "^26.0.1",
    "jest-extended": "^0.11.5",
    "mongodb-memory-server": "^6.6.1",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
