{
  "name": "fullstack",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node ./dist/main.js",
    "dev": "lerna run dev --stream --parallel",
    "dev:admin": "lerna run dev --stream --parallel --ignore @fullstack/app",
    "dev:app": "lerna run dev --stream --parallel --ignore @fullstack/admin",
    "build": "lerna run build --stream",
    "lint": "lerna run lint --stream",
    "test": "lerna run test --stream",
    "heroku-postbuild": "yarn build --ignore @fullstack/app",
    "postinstall": "lerna run postinstall --stream --parallel"
  },
  "workspaces": [
    "packages/server",
    "packages/admin",
    "packages/app",
    "packages/common"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-react-app": "^5.1.0",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.0.10",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --rule 'no-console: [\"error\", { allow: [\"warn\", \"error\"] }]'  --max-warnings=0",
      "prettier --ignore-path .eslintignore --write",
      "git add"
    ],
    "{*.json,.{babelrc,eslintrc,prettierrc}}": [
      "prettier --ignore-path .eslintignore --parser json --write",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write",
      "git add"
    ],
    "*.{yml,md}": [
      "prettier --ignore-path .eslintignore --single-quote --write",
      "git add"
    ]
  },
  "license": "MIT"
}
